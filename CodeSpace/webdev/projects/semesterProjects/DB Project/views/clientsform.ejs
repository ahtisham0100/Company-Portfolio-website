<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title><%= client ? 'Edit Client' : 'Add Client' %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <h1><%= client ? 'Edit Client' : 'Add Client' %></h1>
    
    <!-- Form to add or edit client -->
    <form action="/clients/save" method="POST">
        <% if (client) { %>
            <!-- Hidden input for client_id if it's an edit form -->
            <input type="hidden" name="client_id" value="<%= client.client_id %>">
        <% } %>

        <!-- Client Name Field -->
        <div class="mb-3">
            <label for="client_name" class="form-label">Client Name:</label>
            <input type="text" id="client_name" name="client_name" class="form-control" value="<%= client ? client.client_name : '' %>" required>
        </div>

        <!-- Contact Name Field -->
        <div class="mb-3">
            <label for="contact_name" class="form-label">Contact Name:</label>
            <input type="text" id="contact_name" name="contact_name" class="form-control" value="<%= client ? client.contact_name : '' %>" required>
        </div>

        <!-- Email Field -->
        <div class="mb-3">
            <label for="contact_email" class="form-label">Email:</label>
            <input type="email" id="contact_email" name="contact_email" class="form-control" value="<%= client ? client.contact_email : '' %>" required>
        </div>

        <!-- Phone Field -->
        <div class="mb-3">
            <label for="contact_phone" class="form-label">Phone:</label>
            <input type="text" id="contact_phone" name="contact_phone" class="form-control" value="<%= client ? client.contact_phone : '' %>" required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary"><%= client ? 'Update' : 'Add' %> Client</button>
    </form>

    <!-- Back Link -->
    <br><br>
    <a href="/clients">Back to Clients List</a>
</body>
</html>
