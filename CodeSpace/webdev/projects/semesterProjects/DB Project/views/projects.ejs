<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title>Projects List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h1 class="mb-4">Projects List</h1>
    <a href="/projects/add" class="btn btn-primary mb-3">Add New Project</a>
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>Status</th>
                <th>Client</th>
                <th>Financial Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% projects.forEach(project => { %>
                <tr>
                    <td><%= project.project_name %></td>
                    <td><%= project.description %></td>
                    <td><%= project.start_date %></td>
                    <td><%= project.status %></td>
                    <td><%= project.client_name %></td>
                    <td><%= project.financial_status %></td>
                    <td>
                        <a href="/projects/edit/<%= project.project_id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/project/<%= project.project_id %>" class="btn btn-info btn-sm">View Details</a>
                        <form action="/projects/delete/<%= project.project_id %>" method="POST" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>


</div>

</body>
</html>
