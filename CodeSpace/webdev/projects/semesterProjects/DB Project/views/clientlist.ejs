<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title>Clients List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body class="container">
    <h1>Clients List</h1>
    <a href="/clients/edit">Add New Client</a>
    <table class="table table-striped table-bordered container">
        <thead>
            <tr>
                <th>Client Name</th>
                <th>Contact Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <td><%= client.client_name %></td>
                    <td><%= client.contact_name %></td>
                    <td><%= client.contact_email %></td>
                    <td><%= client.contact_phone %></td>
                    <td>
                        <a href="/clients/edit/<%= client.client_id %>">Edit</a>
                        <form action="/clients/delete/<%= client.client_id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
